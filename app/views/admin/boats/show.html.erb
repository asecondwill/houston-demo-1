<% add_breadcrumb "Boats", admin_boats_path %>
<% add_breadcrumb "Show", [:admin, @boat] %>
<div class="row">
  <div class="col-md-12">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1>Boat Details</h1>
      <div>
        <%= link_to "Edit", edit_admin_boat_path(@boat), class: "btn btn-primary" %>
        <%= link_to "Back", admin_boats_path, class: "btn btn-secondary" %>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <div class="row mb-3">
          <div class="col-sm-3">
            <strong>Name:</strong>
          </div>
          <div class="col-sm-9">
            <%= @boat.name %>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-sm-3">
            <strong>Description:</strong>
          </div>
          <div class="col-sm-9">
            <%= @boat.description %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>