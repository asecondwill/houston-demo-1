<% add_breadcrumb "Boats", admin_boats_path %>
<div class="row">
  <div class="col-md-12">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1>Boats</h1>
      <%= link_to "New Boat", new_admin_boat_path, class: "btn btn-primary" %>
    </div>

    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th colspan="3" class="actions">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @boats.each do |boat| %>
            <tr>
              <td><%= boat.name %></td>
              <td><%= boat.description %></td>
              <td class="actions">
                <%= link_to "Show", [:admin, boat], class: "btn btn-sm btn-outline-primary" %>
                <%= link_to "Edit", edit_admin_boat_path(boat), class: "btn btn-sm btn-outline-secondary" %>
                <%= link_to "Destroy", [:admin, boat], 
                              data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, 
                              class: "btn btn-sm btn-outline-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>