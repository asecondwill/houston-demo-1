<div class="card">
  <div class="card-header">
    <h1>Boats</h1>
  </div>
  <div class="card-body">
    <table class="table ">
      <thead>
        <tr>
              <th scope="col">Name</th>
              <th scope="col">Description</th>
              <th scope="col">Length</th>
              <th colspan="3" scope="col" class="actions"></th>
        </tr>
      </thead>

      <tbody>
        <% @boats.each do |boat| %>
          <tr>
                <td><%= boat.name %></td>
                <td><%= boat.description %></td>
                <td><%= boat.length %></td>
                <td class="actions">
              <%= link_to '<i class="bi bi-eye"></i> Show'.html_safe, [:admin, boat], class: 'btn btn-primary' %>
              <%= link_to '<i class="bi bi-pencil-fill"></i> Edit'.html_safe, edit_admin_boat_path(boat), class: 'btn btn-success' %>
              <%= link_to '<i class="bi bi-trash"></i> Destroy'.html_safe , [:admin, boat], data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                      }, class: 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <%= link_to '<i class="bi bi-plus-circle"></i> New Boat'.html_safe, new_admin_boat_path, class: 'btn btn-success' %>

  </div>
</div>  


