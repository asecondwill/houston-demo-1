<%= simple_form_for([:admin, @boat]) do |f| %>
  <%= errors_for(@boat) %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
  </div>

  <div class="form-actions actions">
    <%= link_to 'Show', [:admin, @boat] if f.object.persisted? %> &nbsp;     
    <%= link_to 'Cancel ', admin_boats_path %> &nbsp; 
    
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>